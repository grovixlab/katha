<div class="container">
    <h1>History</h1>

    <h2>Overdue Books</h2>
    <table>
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Student Name</th>
            </tr>
        </thead>
        <tbody>
            {{#each overdueBooks}}
            <tr class="overdue">
                <td>{{this.bookName}} ({{this.bookId}})</td>
                <td>{{this.studentName}} ({{this.studentId}})</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <h2>Books Taken</h2>
    <table>
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Student Name</th>
            </tr>
        </thead>
        <tbody>
            {{#each booksTaken}}
            <tr class="taken">
                <td>{{this.bookName}} ({{this.bookId}})</td>
                <td>{{this.studentName}} ({{this.studentId}})</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <h2>Books Returned</h2>
    <table>
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Student Name</th>
            </tr>
        </thead>
        <tbody>
            {{#each booksReturned}}
            <tr class="returned">
                <td>{{this.bookName}} ({{this.bookId}})</td>
                <td>{{this.studentName}} ({{this.studentId}})</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<style>
    .container {
        padding: 20px;
        margin: auto;
        width: 80%;
        border-radius: 5px;
    }

    h1 {
        text-align: left;
    }

    h2 {
        color: #000;
        margin-top: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    table,
    th,
    td {
        border: 1px solid #ddd;
    }

    th,
    td {
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: red;
        color: white;
    }

    .overdue td {
        color: red;
    }

    .taken td {
        color: black;
    }

    .returned td {
        color: green;
    }
</style>