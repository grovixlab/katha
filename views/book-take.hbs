<div class="container">
    <h1>Register Book Taking</h1>
    <form action="/history/take" method="POST">
        <div class="input-group">
            <label for="studentId">Student ID</label>
            <input type="text" id="studentId" name="studentId" required>
        </div>
        <div class="input-group">
            <label for="bookId">Book ID</label>
            <input type="text" id="bookId" name="bookId" required>
        </div>
        <div class="input-group">
            <label for="bookName">Book Name</label>
            <input type="text" id="bookName" name="bookName" required>
        </div>
        {{#if error}}
        <div class="error-message">{{error.message}}</div>
        {{/if}}
        <button type="submit" class="button">Take Book</button>
    </form>
</div> 
<style>
    /* Container styles */
    .container {
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 8px;
    }

    .container h1 {
        text-align: center;
        margin-bottom: 20px;
        font-size: 24px;
        color: #333;
    }

    /* Form styles */
    form {
        display: flex;
        flex-direction: column;
    }

    /* Input group styles */
    .input-group {
        margin-bottom: 15px;
    }

    .input-group label {
        display: block;
        margin-bottom: 5px;
        font-size: 16px;
        color: #555;
    }

    .input-group input,
    .input-group select {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .input-group input:focus,
    .input-group select:focus {
        border-color: red;
        outline: none;
    }

    /* Button styles */
    .button {
        background-color: red;
        color: #fff;
        border: none;
        padding: 15px;
        font-size: 16px;
        border-radius: 4px;
