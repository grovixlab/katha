<div class="container">
    <h1>Editing ({{member.memberName}})</h1>
    <form action="/members/update" method="POST">
        <div class="input-group">
            <label for="memberName">Member Name</label>
            <input type="text" id="memberName" value="{{member.memberName}}" name="memberName" required>
        </div>
        <div class="input-group">
            <label for="registerNumber">Register Number</label>
            <input type="text" id="registerNumber" value="{{member.registerNumber}}" name="registerNumber" required>
        </div>
        <div class="input-group">
            <label for="phone">Phone No</label>
            <input type="text" id="phone" name="phone" required value="{{member.phone}}">
        </div>
        <div class="input-group">
            <label for="email">Email</label>
            <input type="text" id="email" name="email" required value="{{member.email}}">
        </div>
        <div class="input-group">
            <label for="email">member ID</label>
            <input type="text" id="email" name="memberId" required value="{{member.memberId}}" readonly>
        </div>
        <!-- Error message section -->
        {{#if error}}
        <div class="error-message" style="color: red; margin-bottom: 15px;">
            {{error.message}}
        </div>
        {{/if}}
        <button type="submit" class="button">Update Member</button>
    </form>
</div>
<style>
    /* Container styles */
    .container {
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 8px;
    }

    .container h1 {
        text-align: center;
        margin-bottom: 20px;
        font-size: 24px;
        color: #333;
    }

    /* Form styles */
    form {
        display: flex;
        flex-direction: column;
    }

    /* Input group styles */
    .input-group {
        margin-bottom: 15px;
    }

    .input-group label {
        display: block;
        margin-bottom: 5px;
        font-size: 16px;
        color: #555;
    }

    .input-group input,
    .input-group select {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .input-group input:focus,
    .input-group select:focus {
        border-color: red;
        outline: none;
    }

    /* Button styles */
    .button {
        background-color: red;
        color: #fff;
        border: none;
        padding: 15px;
        font-size: 16px;
